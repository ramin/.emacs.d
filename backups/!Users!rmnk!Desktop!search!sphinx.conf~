index users
{		
		charset_type = utf-8		
  	source                  = users				
    path                    = /var/www/sphinx/index/users
    morphology              = stem_en
    min_word_len            = 2
    min_prefix_len          = 0
    min_infix_len           = 3		
		enable_star = 1
		docinfo 								= extern

}

index stocks
{		
		charset_type = utf-8		
  	source                  = stocks				
    path                    = /var/www/sphinx/index/stocks
    morphology              = stem_en
    min_word_len            = 1
    min_prefix_len          = 0
    min_infix_len           = 1		
		enable_star							= 1
		docinfo 								= extern
}

